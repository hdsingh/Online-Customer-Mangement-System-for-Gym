<% include partials/admin_header %>

<style type="text/css">
  body{
    background: linear-gradient(to right, #aa4b6b, #6b6b83, #3b8d99);
  }
</style>

<div class="container bg-hsla mt-5 mb-5 rounded ">
<h1 class="text-center text-white"><%= member.name%></h1>
   <div class="text-center">
       <img src="<%=member.pic_url%>" class="img-thumbnail mt-3 mb-3" style="width: 30%">
   </div>
   <div class="form-control">
      <div class="row">
         <h4 class="col-md-4">Father's Name:</h4>
         <h4 class="col-md-8"><%= member.father_name%></h4>
      </div>
      <div class="row">
         <h4 class="col-md-4">Payment Id:</h4>
         <h4 class="col-md-8"><%= member.pay_id%></h4>
      </div>

      <div class="row">
         <h4 class="col-md-4">Payment for:</h4>
         <h4 class="col-md-8"><%= new_last_paid%></h4>
      </div>
  
  <form action="/member/<%=member._id%>/paying" method= "POST">
  	<div class="text-center">
		<button class="btn btn-success col-md-8 mt-3 mb-3">Pay</button>
	</div>
  </form>

</div>
</div>







<!-- Table here -->
<div class="form-control mb-5 container">
<div class="table-wrapper ">
   <table class="table table-striped table-hover ">
      <tr class="bg-warning text-center"><th><h3>Paid Payments</h3></th></tr>
   </table>
   </div>
<div class="table-wrapper">
   <table class="table table-hover table-striped ">
      <tbody>

   <%member.paid_dates.forEach(function(date){%>
	<tr><td><h4><%=date%></h4></td></tr>
<% })%>
</tbody>
</table>
</div>
</div>

